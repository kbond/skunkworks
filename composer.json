{
    "name": "zenstruck/utilities",
    "description": "General PHP utility functions and objects.",
    "homepage": "https://github.com/zenstruck/utilities",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Kevin Bond",
            "email": "kevinbond@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.2.5",
        "symfony/polyfill-php80": "^1.20"
    },
    "require-dev": {
        "symfony/phpunit-bridge": "^5.1"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": { "Zenstruck\\Utilities\\": "src/" },
        "files": ["src/functions.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Zenstruck\\Utilities\\Tests\\": "tests/"
        }
    }
}
