{
    "name": "zenstruck/utilities",
    "description": "General PHP utility functions and objects.",
    "homepage": "https://github.com/zenstruck/utilities",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Kevin Bond",
            "email": "kevinbond@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4.0",
        "symfony/polyfill-php80": "^1.20"
    },
    "require-dev": {
        "doctrine/collections": "^1.6",
        "doctrine/orm": "^2.7",
        "doctrine/persistence": "^1.3|^2.0",
        "pagerfanta/pagerfanta": "^1.0|^2.0",
        "phpunit/phpunit": "^9.5",
        "symfony/phpunit-bridge": "^5.2",
        "symfony/var-dumper": "^4.4|^5.0",
        "twig/twig": "^2.12|^3.0"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": { "Zenstruck\\": "src/" },
        "files": [
            "src/Utilities/functions.php",
            "src/Dimension/functions.php",
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Zenstruck\\": "tests/"
        }
    }
}
